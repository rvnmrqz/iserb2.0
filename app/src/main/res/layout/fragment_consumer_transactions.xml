<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sticaloocanteam.i_serb.Fragment_Consumer_Transactions">

    <ProgressBar
        android:layout_marginTop="16dp"
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--CURRENT TRANSACTION-->
    <LinearLayout
        android:id="@+id/layout_current_info"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Current Transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@color/colorDarkBG"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <!--HIDDEN INFOS-->
        <TextView
            android:visibility="invisible"
            android:id="@+id/txtService_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/txtUser_id"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/worker_profile"
                    android:padding="6dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="65dp"
                    android:layout_height="65dp" />
                <!--DETAILS-->
                <LinearLayout
                    android:layout_marginLeft="6dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <!--WORKER NAME-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:textStyle="bold">
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Worker:" />
                        <TextView
                            android:id="@+id/txtWorkerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true" />
                    </LinearLayout>

                    <!--STATUS-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:text="Status:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="8dp"
                            android:id="@+id/txtStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!--SKILL-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Skill Offered:" />
                        <TextView
                            android:id="@+id/txtSkillname"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <!--SERVICE FEE-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Service Fee:" />
                        <TextView
                            android:layout_marginLeft="8dp"
                            android:id="@+id/txtSkill_service_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!--END TRANSACTION-->
            <Button
                android:id="@+id/btnTrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:minHeight="0dp"
                android:paddingBottom="4dp"
                android:text="Track Location"
                android:textAlignment="center"
                android:textColor="#fff"
                android:visibility="gone" />

            <!--TRACK WORKER-->
            <Button
                android:id="@+id/btnTrackWorker"
                android:visibility="gone"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimary"
                android:minHeight="0dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="TRACK WORKER"
                android:textAlignment="center"
                android:textColor="#fff" />
            <!--END TRANSACTION-->
            <Button
                android:id="@+id/btnEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimary"
                android:minHeight="0dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="End Transaction"
                android:textAlignment="center"
                android:textColor="#fff" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bdbdbd" />
    </LinearLayout>

    <ScrollView
        android:visibility="gone"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/consumer_transacts_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </ScrollView>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="No Past Transactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>
