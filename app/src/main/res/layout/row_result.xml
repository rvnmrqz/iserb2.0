<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--HIDDEN INFOS-->
    <TextView
        android:visibility="gone"
        android:id="@+id/txtskill_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtUser_id"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--DETAILS-->
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_userprofile"
            android:layout_gravity="center_vertical"
            android:src="@drawable/placeholder"
            android:layout_marginRight="8dp"
            android:layout_width="65dp"
            android:layout_height="65dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--WORKER NAME-->
            <TextView
                android:id="@+id/txtWorkerName"
                android:text="Worker Name Here"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--SKILL-->
            <TextView
                android:text="Skill description here"
                android:id="@+id/txtSkillname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--SERVICE FEE-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Service Fee: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtSkill_service_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!--SKILL RATING-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Rating: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtSkill_serviceRating"
                    android:paddingLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btnBookNow"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:minHeight="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Book Now"
        android:textColor="#fff"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
